# AWS Environment Configuration
# Copy this file to .env for AWS deployment

# Environment
ENVIRONMENT=aws_rds

# Database Configuration (AWS RDS)
DATABASE_URL=mysql+pymysql://admin:your_rds_password@your-rds-endpoint.region.rds.amazonaws.com:3306/brahmavastu

# For AWS RDS with SSL (recommended for production):
# DATABASE_URL=mysql+pymysql://admin:your_rds_password@your-rds-endpoint.region.rds.amazonaws.com:3306/brahmavastu?ssl_ca=rds-ca-2019-root.pem

# JWT Configuration
JWT_SECRET_KEY=your-aws-secret-key-here-make-it-very-secure
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (Replace with your actual domain)
FRONTEND_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Security
ENCRYPTION_KEY=your-aws-encryption-key-here-make-it-very-secure
SECRET_KEY=your-aws-secret-key-here-make-it-very-secure

# Google OAuth (Configure with production credentials)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Logging
LOG_LEVEL=INFO

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# AWS RDS Configuration
AWS_RDS_ENDPOINT=your-rds-endpoint.region.rds.amazonaws.com
AWS_RDS_PORT=3306
AWS_RDS_DB_NAME=brahmavastu
AWS_RDS_USERNAME=admin
AWS_RDS_PASSWORD=your_rds_password

# AWS EC2 Configuration
AWS_EC2_INSTANCE_ID=your-ec2-instance-id
AWS_EC2_REGION=us-east-1
