{
  "alarms": [
    {
      "AlarmName": "BV-Backend-High-CPU",
      "AlarmDescription": "Alert when CPU utilization is high",
      "MetricName": "CPUUtilization",
      "Namespace": "AWS/EC2",
      "Statistic": "Average",
      "Period": 300,
      "EvaluationPeriods": 2,
      "Threshold": 80,
      "ComparisonOperator": "GreaterThanThreshold",
      "AlarmActions": ["arn:aws:sns:us-east-1:123456789012:bv-backend-alerts"],
      "OKActions": ["arn:aws:sns:us-east-1:123456789012:bv-backend-alerts"]
    },
    {
      "AlarmName": "BV-Backend-High-Memory",
      "AlarmDescription": "Alert when memory utilization is high",
