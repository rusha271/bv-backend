# Production Environment Configuration
# Copy this file to .env for production deployment

# Environment
ENVIRONMENT=production

# Database Configuration (Production MySQL/AWS RDS)
# For local MySQL:
DATABASE_URL=mysql+pymysql://bvuser:production_password@localhost/brahmavastu_prod

# For AWS RDS (uncomment and configure):
# DATABASE_URL=mysql+pymysql://admin:rds_password@your-rds-endpoint.region.rds.amazonaws.com:3306/brahmavastu

# For AWS RDS with SSL (uncomment and configure):
# DATABASE_URL=mysql+pymysql://admin:rds_password@your-rds-endpoint.region.rds.amazonaws.com:3306/brahmavastu?ssl_ca=rds-ca-2019-root.pem

# JWT Configuration
JWT_SECRET_KEY=your-production-secret-key-here-make-it-very-secure
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration (Replace with your actual domain)
FRONTEND_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Security
ENCRYPTION_KEY=your-production-encryption-key-here-make-it-very-secure
SECRET_KEY=your-production-secret-key-here-make-it-very-secure

# Google OAuth (Configure with production credentials)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Logging
LOG_LEVEL=INFO

# AWS Configuration (if using AWS services)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name
